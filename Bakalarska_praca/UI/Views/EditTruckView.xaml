<Window x:Class="Bakalarska_praca.UI.Views.EditTruckView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upraviť vozidlo" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" Padding="20">
        <StackPanel>
            <TextBlock Text="ŠPZ:" />
            <TextBox Text="{Binding LicensePlate}" Margin="0,5,0,10" />

            <TextBlock Text="Popis:" />
            <TextBox Text="{Binding Description}" Margin="0,5,0,10" />

            <TextBlock Text="Tara (kg):" />
            <TextBox Text="{Binding Tara}" Margin="0,5,0,10" />

            <CheckBox Content="Firemné vozidlo" IsChecked="{Binding IsInHouse}" Margin="0,10,0,0" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Uložiť"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        Width="100"/>
                <Button Content="Zrušiť" Click="Cancel_Click" Width="100" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
