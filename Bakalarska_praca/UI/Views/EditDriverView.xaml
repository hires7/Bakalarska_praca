<Window x:Class="Bakalarska_praca.UI.Views.EditDriverView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Upraviť vodiča" Height="250" Width="400" WindowStartupLocation="CenterScreen">

    <Border Background="White" Padding="20">
        <StackPanel>
            <TextBlock Text="Meno:" />
            <TextBox Text="{Binding FirstName}" Margin="0,5,0,10" />

            <TextBlock Text="Priezvisko:" />
            <TextBox Text="{Binding LastName}" Margin="0,5,0,10" />

            <Button Content="Uložiť" Command="{Binding SaveCommand}" Width="100"
                    HorizontalAlignment="Right" IsDefault="True" />
        </StackPanel>
    </Border>
</Window>
